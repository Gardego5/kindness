{
  "compilerOptions": {
    "target": "ES5",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@context/*": ["./context/*"],
      "@styles/*": ["./styles/*"],
      "@lib/*": ["./lib/*"],
      "@model/*": ["./model/*"],
      "@view/*": ["./view/*"],
      "@hook/*": ["./hook/*"],
      "@slice/*": ["./slice/*"],
      "@types/*": ["./types/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.jsx",
    "**/*.tsx",
    "next.config.cjs",
    "types/*"
  ],
  "exclude": ["node_modules"]
}
